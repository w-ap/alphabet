#!/usr/bin/env bash

echo "ğŸ“š Git â¤ Checkout"

currentBranch=$(git rev-parse --abbrev-ref HEAD)
branch=$1

if ! [[ ${branch} ]]
then
  echo " Please specify a branch to checkout."
  echo "âŒ˜ git checkout <branch>"
else
  if ! [[ $(git checkout ${branch}) ]]
  then
    echo "âœ˜ Failed to checkout branch: $(basename `git rev-parse --show-toplevel`):$(git rev-parse --abbrev-ref HEAD)"
  else
    echo "âœ” Checked out \`${currentBranch}\` branch"
  fi
fi
