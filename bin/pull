#!/bin/bash

echo "üìö Git ‚§è Pull"

NOCOLOR='\033[0m'
RED='\033[0;31m'
GREEN='\033[0;32m'

if ! [[ $(git pull) ]]
then
  echo -e "${RED}‚úò Failed to pull changes from remote $(basename `git rev-parse --show-toplevel`):$(git rev-parse --abbrev-ref HEAD)${NOCOLOR}"
else
  echo -e "${GREEN}‚úî Pulled changes from remote $(basename `git rev-parse --show-toplevel`):$(git rev-parse --abbrev-ref HEAD)${NOCOLOR}"
fi
